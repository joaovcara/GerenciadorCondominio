@model GerenciadorCondominio.ViewModels.RegistroViewModel
@{
    Layout = null;
    ViewData["Title"] = "Cadastro de Locatários";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Novo Locatário</title>
    <environment include="Development">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.css">
        <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
        <link href="~/css/site.css" rel="stylesheet" />
    </environment>

    <environment exclude="Development">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
        <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
        <link href="~/css/site.min.css" rel="stylesheet" />
    </environment>
</head>
<body class="corpo">

    <div class="registroform">
        <div class="center-align">
            <h4><i class="large material-icons">account_circle</i></h4>
            <h5>Novo Locatário</h5>
        </div>

        <div>
            <form asp-action="Registro" enctype="multipart/form-data">
                <div class="campos">
                    <div class="red-text text-darken-4" asp-validation-summary="ModelOnly"></div>

                    <div class="row">
                        <div class="input-field col-s12">
                            <input asp-for="Nome" class="was-validated" id="nome" />
                            <label asp-for="Nome" id="nome"></label>
                            <span asp-validation-for="Nome" class="red-text text-darken-4"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="input-field col-s12">
                            <input asp-for="Cpf" class="was-validated" id="cpf" />
                            <label asp-for="Cpf" id="cpf"></label>
                            <span asp-validation-for="Cpf" class="red-text text-darken-4"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="input-field col-s12">
                            <input asp-for="Telefone" class="was-validated" id="telefone" />
                            <label asp-for="Telefone" id="telefone"></label>
                            <span asp-validation-for="Telefone" class="red-text text-darken-4"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="input-field col-s12">
                            <input asp-for="Email" class="was-validated" type="email" id="email" />
                            <label asp-for="Email" id="email"></label>
                            <span asp-validation-for="Email" class="red-text text-darken-4"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="input-field col-s12">
                            <input asp-for="Senha" class="was-validated" type="password" id="senha" />
                            <label asp-for="Senha" id="senha"></label>
                            <span asp-validation-for="Senha" class="red-text text-darken-4"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="input-field col-s12">
                            <input asp-for="SenhaConfirmada" class="was-validated" type="password" id="senhaConfirmada" />
                            <label asp-for="SenhaConfirmada" id="senhaConfirmada"></label>
                            <span asp-validation-for="SenhaConfirmada" class="red-text text-darken-4"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="file-field input-field col s12">
                            <div class="btn-small">
                                <span>Selecione a foto</span>
                                <input asp-for="Foto" type="file" class="validate" id="foto"/>
                            </div>

                            <div class="file-path-wrapper">
                                <input class="file-path validate" type="text" />
                            </div>

                        </div>
                    </div>
                </div>

                <div class="botoes">
                    <button type="submit" class="waves-effect waves-light btn-small green darken-4">Registrar</button> &emsp;
                    <a asp-controller="Usuarios" asp-action="Login">Já possuo uma conta</a>
                </div>
            </form>
        </div>
    </div>

    <environment include="Development">
        <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.js"></script>
        <script src="https://code.jquery.com/jquery-3.6.0.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.11.2/jquery.mask.js"></script>
        <script src="~/js/IniciarMascaras.js"></script> 
    </environment>

    <environment exclude="Development">
        <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
        <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.11.2/jquery.mask.min.js"></script>
        <script src="~/js/IniciarMascaras.js"></script>
    </environment>
</body>
</html>
