@model GerenciadorCondominio.ViewModels.LoginViewModel
@{
    Layout = null;
    ViewData["Title"] = "Login";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <environment include="Development">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.css">
        <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
        <link href="~/css/site.css" rel="stylesheet" />
    </environment>

    <environment exclude="Development">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
        <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
        <link href="~/css/site.min.css" rel="stylesheet" />
    </environment>
</head>
<body class="corpo">

    <div class="loginform">
        <div class="center-align">
            <h4><i class="large material-icons">account_circle</i></h4>
            <h5>Login</h5>
        </div>

        <div>
            <form asp-action="Login">
                <div class="campos">
                    <div class="red-text text-darken-4" asp-validation-summary="ModelOnly"></div>

                    <div class="row">
                        <div class="input-field col s12">
                            <input asp-for="Email" class="validate" id="email" />
                            <label asp-for="Email" id="email"></label>
                            <span asp-validation-for="Email" class="red-text text-darken-4"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="input-field col s12">
                            <input asp-for="Senha" class="was-validated" type="password" id="senha" />
                            <label asp-for="Senha" id="senha"></label>
                            <span asp-validation-for="Senha" class="red-text text-darken-4"></span>
                        </div>
                    </div>

                    <div class="botoes">
                        <button type="submit" class="waves-effect waves-light btn-small green darken-4">Login</button> &emsp;
                        <a asp-controller="Usuarios" asp-action="Login">Não possuo uma conta</a>
                    </div>
            </form>
        </div>
    </div>

    <environment include="Development">
        <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.js"></script>
        <script src="https://code.jquery.com/jquery-3.6.0.js"></script>
    </environment>

    <environment exclude="Development">
        <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
        <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    </environment>
</body>
</html>
