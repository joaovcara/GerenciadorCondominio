@model IEnumerable<GerenciadorCondominio.BLL.Models.Imovel>

@{
    ViewData["Title"] = "Imoveis";
    string controller = this.ViewContext.RouteData.Values["controller"].ToString();
}

<div class="tabelas">
    <partial name="_Configuracoes" />

    <div class="row valign-wrapper">
        <div class="col s9">
            <h6>Imoveis</h6>
        </div>

        <div class="col s3">
            <a asp-controller="Imovel" asp-action="Create" class="waves-effect waves-light btn-small btn-floating grey darken-4 tooltip" data-position="right" data-tooltip="Novo Imovel">
                <i class="material-icons">add</i>
            </a>
        </div>
    </div>

    @foreach (var item in Model)
    {
        <div class="row card-imoveis">
            <div class="col s12">
                <div class="card horizontal">
                    <div class="card-image">
                        <img src="@Url.Content(item.Foto)" height="250" alt="Imovel" />
                    </div>
                    <div class="card-stacked">
                        <div class="card-content">
                            <span class="grey-text darken-1">Proprietário - @item.Proprietario.UserName</span> &nbsp;
                            <span class="grey-text darken-1">Locatário - @item.Locatario.UserName</span>
                            <hr />

                            <div class="teal-text darken-2">
                                <div class="row">
                                    <div class="col s6">
                                        <span>@item.Endereco</span>
                                    </div>
                                    <div class="col s6">
                                        <span>@item.Numero</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="card-action">
                            <a asp-action="Edit" asp-route-id="@item.ImovelId" class="btn-small purple darken-4">Atualizar</a> &nbsp;
                            <a onclick="ConfirmarExclusao(@item.ImovelId, '@item.Descricao', '@controller')" class="btn-small red accent-3 modal-trigger" data-target="modal">
                                <i class="material-icons">delete_forever</i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    }
</div>

<partial name="_ModalExcluir" />

@section Scripts{ 
    <script src="~/js/ConfirmarExclusao.js"></script>
}