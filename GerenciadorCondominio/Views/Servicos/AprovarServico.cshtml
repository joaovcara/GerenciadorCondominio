@model GerenciadorCondominio.ViewModels.ServicoAprovadoViewModel
@{
    ViewData["Title"] = "Aprovação de Serviço";
}

<div class="formulario">
    <div class="collection with-header">
        <form asp-action="AprovarServico">
            <div class="collection-header green darken-3">
                <h6 class="white-text">Aprovação de Serviço</h6>
            </div>

            <div class="collection-item">
                <div asp-validation-summary="ModelOnly" class="red-text text-darken-4"></div>

                <input type="hidden" asp-for="ServicoId" />

                <div class="row">
                    <div class="input-field col s12">
                        <input asp-for="Data" type="text" class="was-validated" id="Data" />
                        <label asp-for="Data" id="Data"></label>
                        <span class="red-text text-darken-4" asp-validation-for="Data"></span>
                    </div>
                </div>

            </div>

            <div class="collection-item">
                <button type="submit" class="btn-small green darken-3">Salvar</button> &emsp;
                <a asp-action="Index" asp-controller="Servicos">Voltar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/InicializarCalendario.js"></script>
}

